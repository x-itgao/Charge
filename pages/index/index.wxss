.setting{
  margin-top: 30rpx;
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.group{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.setting image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.setting-add{
  margin-left: 20rpx;
  color: white;
  font-size: 25rpx;
  border-color: white;
  border-width: 1rpx;
  border-style: solid;
}
.setting-change{
  font-size: 30rpx;
  margin-right: 40rpx;
}
.total{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 25rpx;
  padding-bottom: 20rpx;
}
.total-item{
  display: flex;
}
.total text{
  font-size: 30rpx;
  text-align: center;
}
.list{
  width: 100%;
  height: 60%;
}
.list-item:active{
  background-color: gainsboro;
}
.title{
  width: 100%;
  background-color: #FAFAFA;
  height: 50rpx;
  display: flex;
  padding-left: 30rpx;
  align-items: center;
}
.title text{
  font-size: 25rpx;
  color: gray;
}
.item{
  margin-left: 30rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.item-text{
  display: flex;
  width: 90%;
  height: 100%;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
  border-bottom-color: gainsboro;
}
.item-text text{
  font-size: 35rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
}
.add{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  position: fixed;
  bottom: 10rpx;
  right: 10rpx;

}
