.head{
  height: 80rpx;
  flex-direction: row;
}
.choose{
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: solid 1px #EEEED1;
}
.choose view{
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.choose text{
  font-size: 35rpx;
  color: blue;
  border-style: solid;
  border-width: 1rpx;
  border-color: blue;
  padding-left: 140rpx;
  padding-right: 140rpx;
  padding-top:6rpx;
  padding-bottom:6rpx
}
.choosed{
  background-color: blue;
}

input{
  font-size:70rpx;
  height:100rpx;
  background-color:white;
  padding-bottom:20rpx;
  padding-top:20rpx;
  padding-left:30rpx;
  border-bottom: solid 1px #EEEED1;
}
.scroll{
  width: 100%;
  height: 100rpx;
  background-color: white;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: solid 1px #EEEED1;
}
.scroll-view_x{
  width: 100%;
  white-space: nowrap;
}
.scroll-item{
  width: auto;
  height: 100%;
  display: inline-block;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
}
.scroll-item text{
  font-size: 35rpx;
  color: blue;
  border-style: solid;
  border-width: 1rpx;
  border-color: blue;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top:8rpx;
  padding-bottom:8rpx;
  border-radius:5px;
}
picker{
  width: 100%;
  height: 80rpx;
  background-color: white;
  padding-left: 30rpx;
  display:flex;
  align-items:center;
  border-bottom: solid 1px #EEEED1;
}
picker text{
  font-size: 30rpx;
}
textarea{
  width: 100%;
  height: 150rpx;
  background-color: white;
  padding-left: 30rpx;
  border-bottom: solid 1px #EEEED1;
}
